on: [push]

jobs:
  hosted_build:
    runs-on: ${{ matrix.os }}
    strategy:
      matrix:
        os: [ macos-latest, ubuntu-18.04]
    name: bisweb-test
    steps:
    - name: Global 
      run: |
        export BISWEBOS=`uname`
        echo $BISWEBOS
        if  [  ${BISWEBOS} == "Darwin" ] ; then
            sudo npm install -g appdmg --unsafe-perm=true --allow-root 
        fi   
        sudo npm install -g gulp mocha rimraf --unsafe-perm=true --allow-root
        